
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Role Management</h1>
<div class="row">
    <h4 class="text-primary text-center">@ViewBag.mag</h4>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" asp-controller="Role" method="post">
            <label>Role Name :</label>
            <input type="text" name="userrole" value="" class="form-control" placeholder="Please type role name...."/><br />
            <button class="btn btn-primary" type="submit">Create Role</button>
        </form>
    </div>
</div>